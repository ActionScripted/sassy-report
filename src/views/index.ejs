<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>TODO: Page Title</title>
    <meta name="description" content="TODO: Page Description">

    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <!-- <link rel="stylesheet" href="css/main.css"> -->

    <style type="text/css">
      html, body {
        background: #eee;
        border: 0;
        box-sizing: border-box;
        color: #333;
        font: 200 100%/1.5 "Helvetica Neue", Arial, Helvetica, sans-serif;
        margin: 0;
        padding: 0;
      } *, *:before, *:after { box-sizing: inherit; }

      .global-header,
      .global-footer {
        margin: 2em;
        text-align: center;
      }

      .section-block {
        background: #fff;
        margin: 2em auto;
        max-width: 48em;
        padding: 1.5em 2em;
        width: 80%;
      }
      .section-block > *:first-child { margin-top: 0; }
      .section-block > *:last-child  { margin-bottom: 0; }

      /* TODO: styles */

    </style>
  </head>
  <body>

    <header class="global-header">
      <div class="global-header__container">
        <p>TODO: Header</p>
      </div>
    </header>

    <main role="main" class="global-main">
      <section class="section-block">
        <% if (report) { %>

          <p>Files:</p>
          <% if (report.files.length) { %>
            <ul>
              <% report.files.forEach(function(file) { %>
                <li><%= file %></li>
              <% }) %>
            </ul>
          <% } else { %>
            <p><em>No files.</em></p>
          <% } %>

          <p>Tags:</p>
          <% if (report.types.length) { %>
            <ul>
              <% report.types.forEach(function(css_type) { %>
                <li><%= css_type %></li>
              <% }) %>
            </ul>
          <% } else { %>
            <p><em>No tags.</em></p>
          <% } %>

          <p>IDs:</p>
          <% if (report.ids.length) { %>
            <ul>
              <% report.ids.forEach(function(css_id) { %>
                <li><%= css_id %></li>
              <% }) %>
            </ul>
          <% } else { %>
            <p><em>No IDs.</em></p>
          <% } %>

          <p>Classes:</p>
          <p>TODO: expand to show ALL uses in selectors.</p>
          <% if (report.classes.length) { %>
            <ul>
              <% report.classes.forEach(function(css_class) { %>
                <li><%= css_class %></li>
              <% }) %>
            </ul>
          <% } else { %>
            <p><em>No classes.</em></p>
          <% } %>

          <p>Selectors:</p>
          <% if (report.selectors.length) { %>
            <ul>
              <% report.selectors.forEach(function(css_selector) { %>
                <li><%= css_selector %></li>
              <% }) %>
            </ul>
          <% } else { %>
            <p><em>No selectors.</em></p>
          <% } %>

        <% } else { %>
          <p>Bro, no report.</p>
        <% } %>
      </section>
    </main>

    <footer class="global-footer">
      <div class="global-footer__container">
        <p>TODO: Footer</p>
      </div>
    </footer>

    <!-- TODO: scripts -->
    <!-- <script src="js/main.js"></script> -->

  </body>
</html>
